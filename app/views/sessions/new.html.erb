
<h3 class="title">Login</h3>


<% if flash[:message] %>
<%= flash[:message] %>
<% end %>
<div class="column side">

</div>
<div class="column middle">
<div class="field">
  <hr>
<%= form_tag '/login' do %>
<label class="label" for="username">Username:</label>
<%= text_field_tag :'user[name]', nil, class:'input' %>

<label class='label' for="password">Password:</label>
<%= password_field_tag :'user[password]', nil, class:'input' %>
<hr>
<div align="center">
<%= submit_tag 'Login', :class => 'button' %>
</div>
<% end %>
</div>
</div>
