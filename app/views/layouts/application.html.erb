<!DOCTYPE html>
<html>
  <head>
    <title>Quizbuzz</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    <nav class="navbar is-light" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <% if current_user  %>
        <a class="navbar-item" href="<%= feed_path %>">
          <% else %>
          <a class="navbar-item" href="<%= feed_path %>">
            <% end %>
          <%= image_tag('quizbuzz-nav-logo.png', width: '112') %>
          <!-- <img src="quizbuzz-nav-logo.png" width="112" height="28"> -->
        </a>

        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <a class="navbar-item" href="<%= categories_path %>">
            All Categories
          </a>

          <a class="navbar-item" href="<%= feed_path %>">
            Feed
          </a>

          <a class="navbar-item" href="<%= users_path %>">
            Friends
          </a>

          <a class="navbar-item" href="<%= about_path %>">
            About
          </a>

        </div>
      </div>

      <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
            <% if current_user %>
              <a class="button is-primary" href="<%= user_path(session[:user_id]) %>">
                <strong>Profile</strong>
              </a>
              <a>
                <strong><%= link_to "Logout", logout_path, method: 'delete', class: 'button is-primary' %></strong>
              </a>
            <% else %>
              <a class="button is-primary" href="/login">
                <strong>Login</strong>
              </a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </nav>
  <script type="text/javascript">
    $(document).ready(function () {

      // Check for click events on the navbar burger icon
      $(".navbar-burger").click(function () {

        // Toggle the "is-active" class on both the "navbar-burger" and the "navbar-menu"
        $(".navbar-burger").toggleClass("is-active");
        $(".navbar-menu").toggleClass("is-active");

      });
    });
  </script>

  <section class="section">
    <div class="container">
      <%= yield %>
    </div>
  </section>

  <footer class="footer">
    <div class="content has-text-centered">
      <p><small>
        <strong>QuizzBuzz</strong>
      </br>
      by
      <a href="https://rgbarker.com">Ryan Barker</a>
      &
      <a href="https://barneyloosemore.com">Barney Loosemore</a>.</br>

  The source code is licensed
  <a href="http://opensource.org/licenses/mit-license.php">MIT</a>.
</small></p>
</div>
</footer>

</body>

</html>
