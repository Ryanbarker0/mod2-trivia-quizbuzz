<h3 class='title' align='center'>Change Password</h1>

<div class="column side"></div>
<div class="column middle">
  <hr>
  <%  if flash[:errors] %>

    <% flash[:errors].each do |message| %>
      <p class='notification is-danger'><%= message %></p>
    <% end %>
  <% end %>
  <div class="field">
    <%= form_for @user do |f| %>

    <%= f.label "Enter your Old Password:", class: 'label' %>
    <%= f.password_field :current_password, class: 'input' %>
  </br>
  <%= f.label "Enter a Password:", class: 'label' %>
  <%= f.password_field :password, class: 'input' %>
</br>
<%= f.label "Confirm your Password:", class: 'label' %>
<%= f.password_field :password_confirmation, class: 'input' %>
<hr>
<div align='center'>
  <%= f.submit class: 'button' %>
</div>
<% end %>
</div>
</div>
