<%  if flash[:errors] %>

  <% flash[:errors].each do |message| %>
<ul>
  <li><%= message %></li>
</ul>
  <% end %>
<% end %>

<%= form_for @user do |f| %>

  <%= f.label "Enter a Username:" %>
  <%= f.text_field :name %>
</br>
  <%= f.label "Enter a Password:" %>
  <%= f.password_field :password %>
</br>
  <%= f.label "Confirm your Password:" %>
  <%= f.password_field :password_confirmation %>
</br>
  <%= f.submit %>
<% end %>
